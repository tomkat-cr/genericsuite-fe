{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "baseUrl": "./src",
    "rootDirs": [
      "src"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "src/*": ["./src/*"],
      // "src/configs/*": ["src/configs/*"],
      // "components/*": ["src/_components/*"],
      // "constants/*": ["src/_constants/*"],
      // "helpers/*": ["src/_helpers/*"],
      // "services/*": ["src/_services/*"],
      // "images/*": ["src/_images/*"]
    }
  },
  "include": [
    "src/**/*",
    // "src/configs",
    // "src/_components",
    // "src/_constants",
    // "src/_helpers",
    // "src/_services",
    // "src/_images",
],
  "files": [
    "index.d.ts"
  ]
}